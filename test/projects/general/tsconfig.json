{
  "extends": "@tsconfig/node18",
  "compilerOptions": {
    "target": "esnext",
    "outDir": "__built",
    "declaration": true,
    "baseUrl": "./",
    "paths": {
      "path": ["https://external.url/path.js"],
      "@*": ["*"],
      "#utils/*": ["./utils/*", "./secondary/*"],
      "*": ["*"]
    },
    "esModuleInterop": true,
    "plugins": [
      { "transform": "typescript-transform-paths" },
      { "transform": "typescript-transform-paths", "afterDeclarations": true }
    ]
  }
}
