{
  "compilerOptions": {
    "target": "es5",
    "module": "ESNext",
    "outDir": "__built",
    "moduleResolution": "node",

    "declaration": true,
    "baseUrl": "./",
    "paths": {
      "path": ["https://external.url/path.js"],
      "@*": ["*"],
      "#utils/*": ["./utils/*", "./secondary/*"],
      "*": ["*"]
    },

    "esModuleInterop": true,

    "plugins": [
      { "transform": "../../../src/index.ts" },
      { "transform": "../../../src/index.ts", "afterDeclarations": true }
    ]
  }
}
