{
  "compilerOptions": {
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "types": [ "@types/underscore-test" ],
    "typeRoots": [],

    "target": "ES2015",
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "../__built",
    "sourceMap": false,

    "declaration": true,
    "baseUrl": "./",
    "paths": {
      "path": ["https://external.url/path.js"],
      "@*": ["*"],
      "#utils/*": [ "./utils/*", "./secondary/*" ],
      "*": ["*"]
    },

    "esModuleInterop": true
  }
}
