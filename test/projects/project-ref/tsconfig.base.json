{
  "compilerOptions": {
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "module": "ESNext",
    "target": "ESNext",
    "composite": true,
    "declaration": true,

    "baseUrl": ".",
    "paths": {
      "#a/*": ["./a/*"],
      "#b/*": ["./b/*"]
    },
    "plugins": [
      {
        "transform": "typescript-transform-paths"
      },
      {
        "transform": "typescript-transform-paths",
        "afterDeclarations": true
      }
    ]
  }
}
