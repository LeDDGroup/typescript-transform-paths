{
  "include": ["src"],

  "compilerOptions": {
    "noEmit": true,
    "outDir": "dist",

    "rootDir": ".",
    "module": "CommonJS",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "declaration": true,

    "baseUrl": "./src",
    "paths": {
      "#identifier": ["./id.ts"]
    },

    "plugins": [
      {
        "transform": "typescript-transform-paths"
      },
      {
        "transform": "typescript-transform-paths",
        "afterDeclarations": true
      }
    ]
  }
}
