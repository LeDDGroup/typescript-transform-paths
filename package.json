{
  "name": "typescript-transform-paths",
  "version": "2.0.2",
  "description": "Transforms absolute imports to relative",
  "keywords": [
    "typescript",
    "transform",
    "transformer",
    "plugin",
    "path",
    "import",
    "require",
    "relative",
    "absolute"
  ],
  "homepage": "https://github.com/LeDDGroup/typescript-transform-paths#readme",
  "bugs": {
    "url": "https://github.com/LeDDGroup/typescript-transform-paths/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/LeDDGroup/typescript-transform-paths.git"
  },
  "license": "MIT",
  "contributors": [
    "Daniel Perez Alvarez <danielpza@protonmail.com>",
    "Ron S. <ron@nonara.com>"
  ],
  "files": [
    "lib",
    "README.md"
  ],
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "directories": {
    "lib": "lib",
    "test": "tests"
  },
  "scripts": {
    "prebuild": "rimraf lib",
    "build": "tsc",
    "release": "standard-version",
    "install:tests": "cd tests/__fixtures/specific && npm install",
    "prepare": "npm run build && npm run install:tests",
    "format": "prettier --write \"{tests,src}/**/*.{js,ts}\"",
    "test": "jest"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/transformer.test.ts"
    ]
  },
  "devDependencies": {
    "@types/jest": "^24.0.15",
    "@types/node": "^12.0.2",
    "jest": "^24.8.0",
    "rimraf": "^3.0.2",
    "standard-version": "^8.0.1",
    "ts-expose-internals": "^4.0.5",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.10.2",
    "ttypescript": "^1.5.6",
    "typescript": "^4.0.5",
    "prettier": "^2.1.2"
  }
}
