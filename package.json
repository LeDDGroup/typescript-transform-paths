{
  "name": "typescript-transform-paths",
  "version": "3.5.3",
  "description": "Transforms module resolution paths using TypeScript path mapping and/or custom paths",
  "type": "commonjs",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./register": "./dist/register-entry.js",
    "./nx-transformer": "./dist/plugins/nx-transformer-plugin.js"
  },
  "files": [
    "dist",
    "types",
    "README.md",
    "CHANGELOG.md",
    "register.js",
    "nx-transformer.js"
  ],
  "scripts": {
    "compile": "tsc -p tsconfig.build.json",
    "g:ts-node": "cd $INIT_CWD && ts-node",
    "postinstall": "node prepare.mjs",
    "build": "yarn clean && yarn compile",
    "test": "jest",
    "release": "changelogen --release --push",
    "--------------": "",
    "format": "prettier --write .",
    "lint": "prettier --check . && eslint .",
    "clean": "rm -rf \"**/dist\"",
    "clean:all": "yarn clean && rm -rf node_modules \"**/node_modules\" \"**/yarn.lock\" yarn.lock",
    "reset": "yarn clean:all && yarn install && yarn build",
    "-------------- ": "",
    "prepack": "yarn build"
  },
  "keywords": [
    "typescript",
    "transform",
    "transformer",
    "plugin",
    "path",
    "paths",
    "virtual directory",
    "import",
    "require"
  ],
  "homepage": "https://github.com/LeDDGroup/typescript-transform-paths#readme",
  "bugs": {
    "url": "https://github.com/LeDDGroup/typescript-transform-paths/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/LeDDGroup/typescript-transform-paths.git"
  },
  "license": "MIT",
  "contributors": [
    "Daniel Perez",
    "Ron S. (https://twitter.com/Ron)"
  ],
  "devDependencies": {
    "@babel/preset-typescript": "^7.26.0",
    "@eslint/js": "^9.9.1",
    "@nrwl/cli": "^15.9.7",
    "@nrwl/js": "^15.9.7",
    "@nrwl/node": "^15.9.7",
    "@nrwl/workspace": "^15.9.7",
    "@tsconfig/node18": "^18.2.4",
    "@tsconfig/strictest": "^2.0.5",
    "@types/eslint": "^9",
    "@types/jest": "^29.5.14",
    "@types/minimatch": "^5.1.2",
    "@types/node": "^22.5.2",
    "@types/ts-expose-internals": "npm:ts-expose-internals@^4.9.5",
    "@types/ts-node": "npm:ts-node@^10.9.2",
    "changelogen": "^0.5.5",
    "eslint": "9.x",
    "globals": "^15.9.0",
    "jest": "^29.7.0",
    "nx": "^15.9.7",
    "prettier": "^3.3.3",
    "prettier-plugin-jsdoc": "^1.3.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "ts-patch": "^3.3.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.3.0",
    "typescript-transform-paths": "workspace:*"
  },
  "peerDependencies": {
    "typescript": ">=5"
  },
  "dependencies": {
    "minimatch": "^9.0.5"
  },
  "prettier": {
    "plugins": [
      "prettier-plugin-jsdoc"
    ]
  },
  "workspaces": [
    "test/projects/*"
  ],
  "packageManager": "yarn@4.5.3+sha512.3003a14012e2987072d244c720506549c1aab73ee728208f1b2580a9fd67b92d61ba6b08fe93f6dce68fd771e3af1e59a0afa28dd242dd0940d73b95fedd4e90"
}
