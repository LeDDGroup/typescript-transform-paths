{
  "name": "typescript-transform-paths",
  "version": "3.3.1",
  "description": "Transforms module resolution paths using TypeScript path mapping and/or custom paths",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "compile": "tsc",
    "build": "yarn run clean && yarn run compile && yarn run check:built-types",
    "check:built-types": "tsc dist/index.d.ts --esModuleInterop",
    "--------------  ": "",
    "test": "jest",
    "test:src": "cross-env TEST_TARGET=src jest",
    "test:dist": "cross-env TEST_TARGET=dist jest",
    "--------------": "",
    "format": "prettier --write \"{src,test}/**/{*.js,!(*.d).ts}\"",
    "clean": "npx rimraf dist **/*.tsbuildinfo",
    "clean:all": "yarn run clean && npx rimraf node_modules **/node_modules test/.yarn-cache",
    "reset": "yarn run clean:all && yarn install && yarn build",
    "-------------- ": "",
    "prebuild": "npx rimraf dist",
    "install:tests": "cd test && yarn install",
    "prepare": "yarn run install:tests"
  },
  "keywords": [
    "typescript",
    "transform",
    "transformer",
    "plugin",
    "path",
    "paths",
    "virtual directory",
    "import",
    "require"
  ],
  "homepage": "https://github.com/LeDDGroup/typescript-transform-paths#readme",
  "bugs": {
    "url": "https://github.com/LeDDGroup/typescript-transform-paths/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/LeDDGroup/typescript-transform-paths.git"
  },
  "license": "MIT",
  "contributors": [
    "Daniel Perez Alvarez <danielpza@protonmail.com>",
    "Ron S. <ron@nonara.com>"
  ],
  "files": [
    "dist",
    "types",
    "README.md",
    "CHANGELOG.md",
    "register.js"
  ],
  "devDependencies": {
    "@types/jest": "^26.0.24",
    "@types/minimatch": "^3.0.5",
    "@types/node": "^16.4.10",
    "@types/ts-expose-internals": "npm:ts-expose-internals@4.4.3",
    "cross-env": "^7.0.3",
    "jest": "^27.0.6",
    "prettier": "^2.3.2",
    "rimraf": "^3.0.2",
    "standard-version": "^9.3.1",
    "ts-jest": "^27.0.4",
    "ts-node": "^10.4.0",
    "ts-patch": "^1.4.4",
    "ts3": "npm:typescript@3.7.7",
    "ts45": "npm:typescript@4.5.0-beta",
    "typescript": "latest"
  },
  "peerDependencies": {
    "typescript": ">=4.2.2"
  },
  "dependencies": {
    "minimatch": "^3.0.4"
  },
  "prettier": {
    "singleQuote": true
  }
}
