{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",

    "declaration": true,
    "baseUrl": "./",
    "paths": {
      "path": ["https://external.url/path.js"],
      "@*": ["*"],
      "#utils/*": [ "./utils/*", "./secondary/*" ],
      "*": ["*"]
    },

    "esModuleInterop": true,

    "plugins": [
      { "transform": "../../../" },
      { "transform": "../../../", "afterDeclarations": true }
    ]
  }
}
