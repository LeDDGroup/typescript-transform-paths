{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",

    "strict": true,

    "declaration": true,
    "outDir": "out/",
    "baseUrl": "./",
    "paths": {
      "@*": ["*"]
    },

    "esModuleInterop": true,

    "plugins": [
      { "transform": "../" },
      { "transform": "../", "afterDeclarations": true }
    ]
  }
}
